generator client {
  provider = "prisma-client-js"
  output   = "./generated"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id                    String        @id @default(cuid())
  createdAt             DateTime      @default(now())
  updatedAt             DateTime      @updatedAt
  username              String        @unique @db.Citext
  emailAddress          String?       @unique @db.Citext
  biography             String?
  profilePictureKey     String?

  // Relationships
  ownedCircles          Circle[]      @relation("CircleOwner")
  joinedCircles         Circle[]      @relation("CircleMembers")
  completions           Completion[]  @relation("CompletionUser")
  posts                 Post[]        @relation("UserPosts")

  // Social (Symmetric)
  sentFriendships       Friendship[]   @relation("UserSentFriendships")
  receivedFriendships   Friendship[]   @relation("UserReceivedFriendships")

  // Invites
  sentCircleInvites     CircleInvite[] @relation("CircleInvitesSender")
  receivedCircleInvites CircleInvite[] @relation("CircleInvitesRecipient")

  // Account
  credentialsAccount    CredentialsAccount?
  oauthAccounts         OAuthAccount[]
}

model CredentialsAccount {
  id                String        @id @default(cuid())
  createdAt         DateTime      @default(now())
  updatedAt         DateTime      @updatedAt

  user              User          @relation(fields: [userId], references: [id], onDelete: Cascade)
  userId            String        @unique

  hashedPassword    String
  passwordVersion   Int
  failedAttempts    Int           @default(0)
  emailVerified     Boolean       @default(false)       
}

model OAuthAccount {
  id                String        @id @default(cuid())
  createdAt         DateTime      @default(now())
  updatedAt         DateTime      @updatedAt
  lastUsedAt        DateTime?

  user              User          @relation(fields: [userId], references: [id], onDelete: Cascade)
  userId            String

  // OAuth fields
  provider          String
  providerAccountId String
  accessToken       String?
  refreshToken      String?
  expiresAt         DateTime?

  @@unique([provider, providerAccountId])
}

model Friendship {
  id                String            @id @default(cuid())
  createdAt         DateTime          @default(now())
  updatedAt         DateTime          @default(now())
  requester         User              @relation("UserSentFriendships", fields: [requesterId], references: [id], onDelete: Cascade)
  requesterId       String
  addressee         User              @relation("UserReceivedFriendships", fields: [addresseeId], references: [id], onDelete: Cascade)
  addresseeId       String          
  status            FriendshipStatus  @default(PENDING)

  @@unique([requesterId, addresseeId])
}

enum FriendshipStatus {
  PENDING
  ACCEPTED
  DECLINED
}

model CircleInvite {
  id                String          @id @default(cuid())
  createdAt         DateTime        @default(now())
  updatedAt         DateTime        @default(now())
  sender            User            @relation("CircleInvitesSender", fields: [senderId], references: [id], onDelete: Cascade)
  senderId          String
  recipient         User            @relation("CircleInvitesRecipient", fields: [recipientId], references: [id], onDelete: Cascade)
  recipientId       String
  circle            Circle          @relation(fields: [circleId], references: [id], onDelete: Cascade)
  circleId          String
  status            InviteStatus    @default(PENDING)
}

enum InviteStatus {
  PENDING
  ACCEPTED
  DECLINED
}

model Post {
  id                String        @id @default(cuid())
  createdAt         DateTime      @default(now())
  updatedAt         DateTime      @updatedAt
  user              User          @relation("UserPosts", fields: [userId], references: [id], onDelete: Cascade)
  userId            String        
  habit             Habit         @relation("HabitPosts", fields: [habitId], references: [id], onDelete: Cascade)
  habitId           String
  completion        Completion    @relation(fields: [completionId], references: [id], onDelete: Cascade)
  completionId      String       
  photoKey          String?
  caption           String?

  @@unique([completionId])
}

model Habit {
  id                String        @id @default(cuid())
  createdAt         DateTime      @default(now())
  updatedAt         DateTime      @updatedAt
  name              String
  circle            Circle        @relation("CircleHabits", fields: [circleId], references: [id], onDelete: Cascade)
  circleId          String
  completions       Completion[]  @relation("CompletionHabit")
  posts             Post[]        @relation("HabitPosts")
}

model Circle {
  id                String          @id @default(cuid())
  createdAt         DateTime        @default(now())
  updatedAt         DateTime        @updatedAt
  name              String
  photoKey          String?
  owner             User            @relation("CircleOwner", fields: [ownerId], references: [id])
  ownerId           String
  members           User[]          @relation("CircleMembers")
  habits            Habit[]         @relation("CircleHabits")
  invites           CircleInvite[]
}

model Completion {
  id                String        @id @default(cuid())
  createdAt         DateTime      @default(now())
  completedAt       DateTime
  user              User          @relation("CompletionUser", fields: [userId], references: [id], onDelete: Cascade)
  userId            String
  habit             Habit         @relation("CompletionHabit", fields: [habitId], references: [id], onDelete: Cascade)
  habitId           String
  post              Post?

  @@unique([userId, habitId, completedAt])
}

